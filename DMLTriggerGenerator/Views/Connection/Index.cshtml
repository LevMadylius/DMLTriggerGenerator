@model DMLTriggerGenerator.DAL.Model.ConnectionString
@{
	Layout = null;
}

@Styles.Render("~/Content/bootstrap")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")



<div class="container">
	<div id="logo-block">

	</div>

	<div id="connection-block">
		<div class="row">
			<div class="col-xs-8 col-xs-offset-3">
				@using (Html.BeginForm("Connect", "Connection", FormMethod.Post))
				{
					<div class="form-group row">
						<label for="IP" class="col-md-2 control-label">IP</label>
						<div class="col-md-10">
							<input type="text" class="form-control" id="IP" name="IP" placeholder="IP">
						</div>
					</div>
					<div class="form-group row">
						<label for="Port" class="col-md-2 control-label">Port</label>
						<div class="col-md-10">
							<input type="text" class="form-control" id="Port" name="Port" value="1433" placeholder="Port">
						</div>
					</div>

					<div class="form-group row">
						<label for="InitialCatalog" class="col-md-2 control-label">Initial Catalog</label>
						<div class="col-md-10">
							<input type="text" class="form-control" id="InitialCatalog" name="InitialCatalog" placeholder="Initial Catalog">
						</div>
					</div>

					<div class="form-group row">
						<label for="UserId" class="col-md-2 control-label">User</label>
						<div class="col-md-10">
							<input type="text" class="form-control" id="UserId" name="UserId" placeholder="User Name">
						</div>
					</div>

					<div class="form-group row">
						<label for="Password" class="col-md-2 control-label">Password</label>
						<div class="col-md-10">
							<input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
						</div>
					</div>

					<div class="form-group row">
						<div class="col-md-offset-2 col-md-10">
							<button type="submit" class="btn btn-default">Connect</button>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>


